<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.knu.it.stages.database.viewer.ViewerController"
      prefHeight="400.0" prefWidth="600.0">
    <Hyperlink fx:id="databaseName"/>
    <GridPane fx:id="tableGrid" hgap="5" vgap="5" gridLinesVisible="true"/>
    <Hyperlink text="Add new table" onAction="#addNewTable" style="-fx-border-style: hidden">
        <VBox.margin>
            <Insets left="5"/>
        </VBox.margin>
    </Hyperlink>
    <Hyperlink text="Refresh" onAction="#refresh" style="-fx-border-style: hidden">
        <VBox.margin>
            <Insets left="5"/>
        </VBox.margin>
    </Hyperlink>
</VBox>
