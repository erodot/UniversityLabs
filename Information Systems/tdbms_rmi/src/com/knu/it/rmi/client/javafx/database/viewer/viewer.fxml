<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.knu.it.rmi.client.javafx.database.viewer.DatabaseViewerController"
      prefHeight="400.0" prefWidth="600.0">
    <Hyperlink fx:id="databaseName"/>
    <GridPane fx:id="tableGrid" hgap="5" vgap="5" gridLinesVisible="true"/>
    <Hyperlink text="Add new table" onAction="#addNewTable" style="-fx-border-style: hidden">
        <VBox.margin>
            <Insets left="5"/>
        </VBox.margin>
    </Hyperlink>
    <Hyperlink text="Refresh" onAction="#refresh" style="-fx-border-style: hidden">
        <VBox.margin>
            <Insets left="5"/>
        </VBox.margin>
    </Hyperlink>
</VBox>
